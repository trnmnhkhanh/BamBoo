doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='/resource/css/style.css')
  title &Dstrok;&abreve;ng k&iacute;
.main 
  form#form-1.form(action='/auth/login', method='POST')
    h3.heading Đăng nhập
    if errors
      each error in errors
        .spacer= error
    .form-group
      label.form-label(for='email') Email
      input#email.form-control(name='email', type='text', placeholder='VD: email@domain.com')
      span.form-message
    .form-group
      label.form-label(for='password') M&#x1EAD;t kh&#x1EA9;u
      input#password.form-control(name='password', type='password', placeholder='Nhập mật khẩu')
      span.form-message
    
    button.form-submit &Dstrok;&abreve;ng k&yacute;
script(src='/resource/js/validator.js')
script.
  Validator({
  form: '#form-1',
  errorSelector: '.form-message',
  formGroupSelector: '.form-group',
  rules: [
  Validator.isRequired('#email'),
  Validator.isEmail('#email'),
  Validator.isCheckPassword('#password')
  ],
